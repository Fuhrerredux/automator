{
  "build": {
    "beforeDevCommand": "yarn vite:dev",
    "beforeBuildCommand": "yarn vite:build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "automator",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "open": true,
        "save": true,
        "message": true
      },
      "fs": {
        "all": true,
        "scope": ["$HOME/*/**", "$LOCALDATA/*/**", "$DOCUMENT/*/**"]
      },
      "path": {
        "all": true
      }
    },
    "updater": {
      "active": true,
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ0MkIwNzMwRDgwNDBENgpSV1RXUUlBTmM3QkNCRWl6eFJOalVXZUZndDMwM24wTElSNnR6K29YclRRSlE1cU5jSk1LL1MxMwo=",
      "windows": {
        "installMode": "passive",
        "installerArgs": []
      },
      "endpoints": [
        "https://github.com/Fuhrerredux/automator/releases/latest/download/latest.json"
      ]
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "github.dax0102.automator",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Automator",
        "width": 1280,
        "height": 720,
        "fileDropEnabled": false,
        "visible": false
      },
      {
        "width": 640,
        "height": 360,
        "url": "../splashscreen.html",
        "label": "splashscreen",
        "decorations": false,
        "center": true,
        "alwaysOnTop": true
      }
    ]
  }
}
